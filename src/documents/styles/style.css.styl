blue-link = #259dcf
header-link-grey = #3e3e3e
date-red = #F54C4C

body
	background #f6f6f6
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	margin 0

ul
	list-style none
	margin 0
	padding 0

a
	text-decoration none
	color blue-link

.container
	height 100%

.topbar,
.main,
.bottombar
	width 80%
	margin-right auto
	margin-left auto

.topbar
	position relative

	.topbar-inner
		width 80%
		position fixed
		z-index 500
		background #f6f6f6
		border-bottom 1px solid #aaa
		text-transform uppercase
		padding 15px 0

	.logo
		float left
		font-weight bold
		border-bottom 1px solid #f6f6f6

	.links
		display inline
		margin-left 25px

		a
			margin-left 15px

			&:hover
				border-bottom 1px solid #aaa

			&.active
				border-bottom 1px solid #aaa

	.social
		float right

		.github
			margin-right 10px

	a
		line-height 1.5em
		font-size 18px
		color #3e3e3e

.main
	padding 59px 0
	position relative

	ul
		li
			h3
				margin-bottom 3px
				line-height 20px

			p
				margin 0 0 3px 0
				font-size 15px

			.post-date
				font-size 14px
				font-weight normal
				color date-red

.bottombar
	border-top 1px solid #aaa

	.bottombar-inner
		padding 15px 0
		text-transform uppercase
		width 100%

		a
			color blue-link

			&:hover
				text-decoration underline

.archive
	margin-top 20px

	a
		color blue-link

.post-wrapper
	h1
		margin-bottom 7px
	aside
		margin 0 0 7px 20px
		padding 7px 0 7px 10px
		border-left 3px solid header-link-grey
		font-style italic
	.small
		font-size 14px
		color date-red
	.post
		margin 15px 0